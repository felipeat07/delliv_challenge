// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pedido {
  id             Int      @id @default(autoincrement()) @map("_id")
  nomeCliente    String
  enderecoEntrega String
  statusPedido   String
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String   // Este campo normalmente seria substitu√≠do por uma hash segura da senha
}